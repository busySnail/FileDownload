<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main"
    tools:context="com.busysnail.filedownload.MainActivity">

    <TextView
        android:id="@+id/tv_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filename"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:paddingLeft="20dp"/>

    <ProgressBar

        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_filename"
        android:layout_toStartOf="@+id/bt_start"
        android:layout_marginEnd="21dp"
        android:id="@+id/pb_progress" />

    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pb_progress"/>
    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bt_stop"
        android:layout_toLeftOf="@id/bt_stop"
        android:text="开始"/>




</RelativeLayout>
